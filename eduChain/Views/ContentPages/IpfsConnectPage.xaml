<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eduChain.Views.ContentPages.IpfsConnectPage"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"

             Title="IpfsConnectPage">
    <VerticalStackLayout Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Upload" Command="{Binding UploadCommand}"/>
        <Button Text="Download" Command="{Binding DownloadCommand}"/>
        <HorizontalStackLayout HorizontalOptions="Center"  Spacing="30">
            <ur:TextField WidthRequest="500"  Title="Enter CID" Text="{Binding Cid}"/>
            <ur:TextField WidthRequest="200" Text="{Binding VerifyFileInfoName}" IsReadOnly="True" Title="File" />
            <Button Text="Add File" Command="{Binding FileForVerifyCommand}"/>
            <Button Text="Verify" MaximumWidthRequest="500" Command="{Binding VerifyCommand}"/>

        </HorizontalStackLayout>
       <Button Text="List" Command="{Binding CheckCommand}"/>
    </VerticalStackLayout>
</ContentPage>