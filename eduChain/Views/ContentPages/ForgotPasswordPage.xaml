<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eduChain.Views.ContentPages.ForgotPasswordPage"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             Title="ForgotPasswordPage">
    <VerticalStackLayout VerticalOptions="Center">
        <StackLayout HorizontalOptions="Center" Spacing="40">
            <ur:TextField Title="Enter Email" Text="{Binding Email}" WidthRequest="400" BorderColor="Honeydew" TitleColor="Honeydew" TextColor="Honeydew">
                <validation:RequiredValidation/>
            </ur:TextField>
            <Button StyleClass="Filled" Text="Send Reset Email" Command="{Binding SendResetEmailCommand}" WidthRequest="400" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>