<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="eduChain.Views.Popups.LoadingPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" Color="Transparent">
    <Frame CornerRadius="15" BackgroundColor="LightGreen" BorderColor="Transparent">
        <VerticalStackLayout WidthRequest="250" HeightRequest="250" VerticalOptions="Center">

            <Image Source="dancing.gif" IsAnimationPlaying="True"  WidthRequest="150" Margin="0,0,0,10" HorizontalOptions="Center" HeightRequest="200" VerticalOptions="Center"/>
            <Label Text="Welcome to eduChain" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End"/>
        </VerticalStackLayout>

    </Frame>
 
</toolkit:Popup>