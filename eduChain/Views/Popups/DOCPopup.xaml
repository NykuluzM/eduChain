<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"

               x:Class="eduChain.Views.Popups.DOCPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >

    
            <Grid WidthRequest="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label x:Name="labelHolder" Text="eduChain" Grid.Row="0" TextColor="Purple" HorizontalOptions="Center"  FontSize="15" FontAttributes="Bold"/>
                <StackLayout Grid.Row="1" VerticalOptions="Fill" HorizontalOptions="FillAndExpand">
                    <syncfusion:SfPdfViewer x:Name="PdfViewer"   DocumentSource="{Binding PdfDocumentStream}" HeightRequest="600" ZoomFactor="0.4" />
                </StackLayout>
                <Button Text="Close" Clicked="ClosePopup" Grid.Row="2"/>
            </Grid>
           
</toolkit:Popup>