<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="eduChain.Views.Popups.MPPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >
    <Frame CornerRadius="20" WidthRequest="400" HeightRequest="400" BackgroundColor="AliceBlue">
        <VerticalStackLayout Spacing="25" Padding="0,0,0,0" VerticalOptions="Center">
            <toolkit:MediaElement x:Name="playerHolder"  ShouldAutoPlay="True" ShouldShowPlaybackControls="True" Aspect="AspectFit" />

            <Button Text="Close" Clicked="ClosePopup"/>
        </VerticalStackLayout>
    </Frame>
       
</toolkit:Popup>