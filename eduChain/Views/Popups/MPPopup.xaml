<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="eduChain.Views.Popups.MPPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <Label x:Name="labelHolder" Text="eduChain" Width="20" Height="20"  TextColor="Purple" HorizontalOptions="Center" Grid.Row="0" VerticalOptions="End" FontSize="15" FontAttributes="Bold"/>
        <toolkit:MediaElement x:Name="playerHolder" Source="https://www.youtube.com/watch?v=3nQNiWdeH2Q" Grid.Row="1" ShouldAutoPlay="True"  HeightRequest="300" WidthRequest="300" />
        <Button Text="Close" Grid.Row="2" Clicked="ClosePopup" />
    </Grid>
       
</toolkit:Popup>