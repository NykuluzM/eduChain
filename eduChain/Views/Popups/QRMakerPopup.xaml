<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:barcode="clr-namespace:Syncfusion.Maui.Barcode;assembly=Syncfusion.Maui.Barcode"
               x:Class="eduChain.Views.Popups.QRMakerPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >
    <Grid Background="Beige" RowDefinitions="Auto,*,Auto">
        <Label x:Name="labelHolder" Text="eduChain" Margin="0,0,0,20" Grid.Row="0" TextColor="Purple" HorizontalOptions="Center"  FontSize="15" FontAttributes="Bold"/>
    
        <barcode:SfBarcodeGenerator Grid.Row="1" x:Name="bcode"
                                   HeightRequest="500"
                                   WidthRequest="500"
                                   ForegroundColor="Black" BackgroundColor="White">
            <barcode:SfBarcodeGenerator.Symbology>
                <barcode:QRCode/>
            </barcode:SfBarcodeGenerator.Symbology>
        </barcode:SfBarcodeGenerator>
        <HorizontalStackLayout HorizontalOptions="Center" Grid.Row="2" Margin="0,20,0,0" Spacing="15">
                <Button Text="Save" WidthRequest="200" Clicked="SaveAsImage" />
                <Button  Text="Close"  WidthRequest="200" Clicked="ClosePopup" /> 

        </HorizontalStackLayout>
    </Grid>
       
</toolkit:Popup>