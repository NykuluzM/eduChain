<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="eduChain.Views.Popups.IMAGEPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >
    <Grid Background="Beige" Margin="20" RowDefinitions="Auto,*,Auto">
    <StackLayout>
        <Label x:Name="labelHolder" Text="eduChain" TextColor="Purple" HorizontalOptions="Center"  FontSize="15" FontAttributes="Bold"/>
    </StackLayout>
   
        <Image x:Name="imageHolder" BackgroundColor="White" IsAnimationPlaying="True" Source="dotnet_bot.png"  Grid.Row="1"/>
          
        <Button Text="Close" Grid.Row="2" Clicked="ClosePopup" />
    </Grid>
       
</toolkit:Popup>