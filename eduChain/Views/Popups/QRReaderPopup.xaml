<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
               xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"

               x:Class="eduChain.Views.Popups.QRReaderPopup"
               CanBeDismissedByTappingOutsideOfPopup="false" >
    <VerticalStackLayout WidthRequest="500" HeightRequest="500"> 
        <Label x:Name="labelHolder" Text="eduChain" Margin="0,0,0,20" TextColor="Purple" HorizontalOptions="Center"  FontSize="15" FontAttributes="Bold"/>
        <cv:CameraView x:Name="cameraView" WidthRequest="500" HeightRequest="500" CamerasLoaded="cameraView_CameraLoaded"/>

    </VerticalStackLayout>
       
</toolkit:Popup>