<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="eduChain.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:eduChain"
    xmlns:pages="clr-namespace:eduChain.Views.ContentPages"
    xmlns:preferences="Microsoft.Maui.Storage; Assembly=Microsoft.Maui"
    Shell.FlyoutBehavior="Disabled"
    Title="eduChain">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="loginPage" />
    <ShellContent
        Title="HomePage"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="homePage" />
    <ShellContent
        Title="RegisterPage"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="registerPage" />
</Shell>
